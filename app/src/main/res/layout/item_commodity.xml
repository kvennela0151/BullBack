<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Row 1: Name and Change -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Commodity Name -->
        <TextView
            android:id="@+id/tvCommodityName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CRUDEOIL"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <!-- Change Amount -->
        <TextView
            android:id="@+id/tvCommodityChange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+84.00"
            android:textSize="16sp"
            android:gravity="end"/>
    </LinearLayout>

    <!-- Row 2: Price and Change Percentage -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Price -->
        <TextView
            android:id="@+id/tvCommodityPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5,450.00"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <!-- Change Percentage -->
        <TextView
            android:id="@+id/tvCommodityChangePercent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.57%"
            android:textSize="14sp"
            android:gravity="end"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_gray"/>

</LinearLayout>