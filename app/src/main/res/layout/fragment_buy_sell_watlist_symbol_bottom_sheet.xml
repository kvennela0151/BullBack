<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg_bottom_sheet">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="120dp"
            android:text="Enable Stoploss &amp; Target"
            android:textSize="14sp"
            android:textColor="#7A7A7A"/>

        <Switch
            android:id="@+id/switchSL"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
    </LinearLayout>

    <!-- Instrument Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvSymbol"
                android:text="NIFTY26JANFUT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvSegment"
                android:text="INDEX-FUT"
                android:textSize="12sp"
                android:textColor="#7A7A7A"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvBidAsk"
                android:text="Bid: 25305   Ask: 25310.3"
                android:textSize="13sp"
                android:textColor="#C62828"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvDate"
                android:text="2026-01-27"
                android:textSize="12sp"
                android:textColor="#7A7A7A"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvLtp"
                android:text="25310.3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#C62828"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tvChange"
                android:text="-44.70 (-0.18%)"
                android:textSize="13sp"
                android:textColor="#C62828"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="#EAEAEA" />

    <!-- OHLC -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvOpen"
            android:layout_weight="1"
            android:text="O: 25379.9"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvHigh"
            android:layout_weight="1"
            android:text="H: 25379.9"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvLow"
            android:layout_weight="1"
            android:text="L: 25268.2"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvClose"
            android:layout_weight="1"
            android:text="C: 25349.8"
            android:textSize="12sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="#EAEAEA" />

    <!-- Lot Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvMaxLot"
            android:layout_weight="1"
            android:text="Max Lot: 100"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvOrderLot"
            android:layout_weight="1"
            android:text="Order Lot: 100"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvLotSize"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Lot Size: 65"
            android:textSize="12sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvQty"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Qty: 65"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:tabIndicatorColor="@color/black"
        app:tabSelectedTextColor="@color/black" >

        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Market"/>

        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Limit"/>
    </com.google.android.material.tabs.TabLayout>

    <!-- Price Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/priceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_lock"
        android:hint="Price"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:enabled="false"
            android:padding="14dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Lots Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lotsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lots"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_refresh"
        android:layout_marginTop="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLots"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:padding="14dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Stoploss & Target Container -->
    <LinearLayout
        android:id="@+id/layoutStoplossTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone">

        <!-- Stoploss Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etStoploss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Stoploss"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Target Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Target"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@color/black" />

    <!-- Funds Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvIntradayMargin"
            android:layout_weight="1"
            android:text="Intraday: 25379.9"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvCarryMargin"
            android:layout_weight="1"
            android:text="Carry: 25379.9"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvAvailableMargin"
            android:layout_weight="1"
            android:text="Avail. Funds: 25268.2"
            android:textSize="12sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="#EAEAEA" />

    <!-- Place Order -->
    <Button
        android:id="@+id/btnPlaceOrder"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Place Order"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/button_green_dark"/>

</LinearLayout>
