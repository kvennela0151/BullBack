<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Watchlist"
        android:background="#C8E6C9"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/black"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.tabs.TabItem
            android:text="INDEX-FUT"
            android:layout_height="35dp"
            android:layout_width="35dp"/>
        <com.google.android.material.tabs.TabItem
            android:text="MCX-FUT"
            android:layout_height="35dp"
            android:layout_width="35dp"/>
        <com.google.android.material.tabs.TabItem
            android:text="CRYPTO"
            android:layout_height="35dp"
            android:layout_width="35dp"/>
        <com.google.android.material.tabs.TabItem
            android:text="COMEX"
            android:layout_height="35dp"
            android:layout_width="35dp"/>

    </com.google.android.material.tabs.TabLayout>

    <!-- Search Box -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_searchh"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="#F2F2F2"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDelete">

        <!-- Search -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:hint="Search instruments..."
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            android:inputType="none"
            android:drawableStart="@drawable/ic_searchh"
            android:drawablePadding="12dp"/>


    </com.google.android.material.textfield.TextInputLayout>

    <!-- Delete Icon -->
    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_delete"
        android:padding="10dp"
        app:tint="#C62828"
        app:layout_constraintTop_toTopOf="@id/searchLayout"
        app:layout_constraintBottom_toBottomOf="@id/searchLayout"
        app:layout_constraintEnd_toEndOf="parent"/>

    <CheckBox
        android:id="@+id/cbSelectAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select All"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/searchLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvDeleteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/bg_delete_red"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/cbSelectAll"
        app:layout_constraintStart_toEndOf="@id/cbSelectAll"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!--  Watchlist RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerWatchlist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/cbSelectAll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
