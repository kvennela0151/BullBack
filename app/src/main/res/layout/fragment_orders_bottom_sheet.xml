<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg_bottom_sheet">

    <!-- Header with Back Button and Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="120dp"
            android:text="Enable Stoploss &amp; Target"
            android:textSize="14sp"
            android:textColor="#7A7A7A"/>

        <Switch
            android:id="@+id/switchStoplossTarget"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
    </LinearLayout>

    <!-- Instrument Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical" android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIFTY26APR FUT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvSegment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INDEX-FUT"
                android:textSize="12sp"
                android:textColor="#7A7A7A"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvBidAsk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bid: 1222.3   Ask: 26195.6"
                android:textSize="13sp"
                android:textColor="#C62828"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2026-02-03"
                android:textSize="12sp"
                android:textColor="#7A7A7A"/>

            <TextView
                android:id="@+id/tvLtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26197.8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+764.40 (3.01%)"
                android:textSize="13sp"
                android:textColor="#4CAF50"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="#EAEAEA" />

    <!-- OHLC -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tvOpen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="O: 120"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvHigh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="H: 26610.7"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvLow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="L: 26020"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvClose"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="C: 25433.4"
            android:textSize="12sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="#EAEAEA" />

    <!-- Lot size and Qty -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Lot Size: 1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty: 65" />
    </LinearLayout>

    <!-- Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:tabIndicatorColor="@color/black"
        app:tabSelectedTextColor="@color/black" />


    <!-- Price Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/priceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_lock"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:enabled="false"
            android:padding="14dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Lots Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lotsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lots"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_refresh"
        android:layout_marginTop="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLots"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:padding="14dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Stoploss & Target (Hidden initially) -->
    <LinearLayout
        android:id="@+id/llStoplossTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:weightSum="2">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Stoploss">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etStoploss"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="numberDecimal"
                android:padding="14dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="Target">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTarget"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="numberDecimal"
                android:padding="14dp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnModify"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="MODIFY"
            android:textColor="@color/white" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:backgroundTint="#D32F2F"
            android:text="DELETE"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
