<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Positions"
        android:background="#C8E6C9"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Exit All Button -->

    <!-- Tabs -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExitAll"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:paddingHorizontal="8dp"
        android:text="Exit All"
        android:textColor="@android:color/holo_red_dark"
        app:icon="@drawable/ic_exit"
        app:iconPadding="8dp"
        app:iconTint="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:strokeColor="@android:color/holo_red_dark" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutPositions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@android:color/black"
        app:tabSelectedTextColor="@android:color/black"
        app:tabTextColor="@android:color/darker_gray"
        app:tabIndicatorFullWidth="false"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <com.google.android.material.tabs.TabItem
            android:text="Open"
            android:layout_height="35dp"
            android:layout_width="35dp"/>

        <com.google.android.material.tabs.TabItem
            android:text="Active"
            android:layout_height="35dp"
            android:layout_width="35dp"/>

        <com.google.android.material.tabs.TabItem
            android:text="Closed"
            android:layout_height="35dp"
            android:layout_width="35dp"/>
    </com.google.android.material.tabs.TabLayout>

    <!-- Open PNL Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOpenPnl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:backgroundTint="#F9F9F9"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutPositions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open PNL"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvOpenPnl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-708.50"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="4dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Positions List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPositions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardOpenPnl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
