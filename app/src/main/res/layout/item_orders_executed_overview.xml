<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Symbol -->
    <TextView
        android:id="@+id/tvSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:text="BTCUSD"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Segment Badge -->
    <TextView
        android:id="@+id/tvSegment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRYPTO"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:textSize="12sp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tvSymbol"
        app:layout_constraintTop_toTopOf="@id/tvSymbol"/>

    <!-- Status -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:textSize="12sp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Buy Badge -->
    <TextView
        android:id="@+id/tvBuy"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="B"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/bg_circle_green"
        app:layout_constraintTop_toBottomOf="@id/tvSymbol"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Quantity & Price -->
    <TextView
        android:id="@+id/tvQtyPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 x 91,400.00"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tvBuy"
        app:layout_constraintTop_toTopOf="@id/tvBuy"/>

    <!-- Order Type -->
    <TextView
        android:id="@+id/tvOrderType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Type: LIMIT"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tvBuy"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Date -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:text="1/13/2026, 10:40:15 AM"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"/>

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvOrderType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
