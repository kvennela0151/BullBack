<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Back + Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trade Logs"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Filter Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#111A2B"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#111A2B"
            android:elevation="4dp">

            <!-- Start Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:hint="20"
                android:textSize="14sp"
                android:textColor="#9FA8B6" />

            <EditText
                android:id="@+id/startDate"
                android:hint="20"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_box"
                android:padding="12dp"
                android:drawableEnd="@drawable/ic_calendar"
                android:textColor="@android:color/white"
                android:textColorHint="#7A8595" />

            <!-- End Date + Results -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:textColor="#9FA8B6"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/endDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="15"
                        android:background="@drawable/bg_input_box"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:textColor="@android:color/white"
                        android:textColorHint="#7A8595"
                        android:padding="12dp" />
                </LinearLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Results Per Page"
                        android:textColor="#9FA8B6"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/resultsPerPage"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="20"
                        android:background="@drawable/bg_input_box"
                        android:drawableEnd="@drawable/ic_drop"
                        android:textColor="@android:color/white"
                        android:textColorHint="#7A8595"
                        android:padding="12dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="18dp">

                <Button
                    android:id="@+id/btnApply"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Apply"
                    android:background="@drawable/bg_button_outline"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnDownload"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Download"
                    android:background="@drawable/bg_button_filled"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tradeLogsRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp" />

    </LinearLayout>

</ScrollView>
